								"value": "@pipeline().Pipeline",
								"type": "Expression"
							},
							"type": "String"
						},
						"LastModified": {
							"value": {
								"value": "@utcNow()",
								"type": "Expression"
							},
							"type": "Datetime"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "mentoring_azure_sql_server_movies_ls",
					"type": "LinkedServiceReference"
				}
			}
		],
		"variables": {
