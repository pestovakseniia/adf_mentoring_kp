								"sink": {
									"path": "$['serviceName']"
								}
							},
							{
								"source": {
									"path": "$['serviceCode']"
								},
								"sink": {
									"path": "$['serviceCode']"
								}
							},
							{
								"source": {
									"path": "$['movieId']"
								},
								"sink": {
									"path": "$['movieId']"
